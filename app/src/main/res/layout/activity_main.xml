<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/select_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A81CB"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:paddingRight="20dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/find_bus_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="@string/find_your_bus"
                android:textColor="#50ABDE"
                android:textSize="30sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="20dp"
                android:background="#4F90CB"
                android:weightSum="100">
                <EditText
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_height="57dp"
                    android:background="#4F90CB"
                    android:hint="From : nearest stop"
                    android:paddingLeft="20dp"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textColorHint="#A8FFFFFF"
                    android:layout_weight="80"/>
                <ImageView
                    android:padding="10dp"
                    android:id="@+id/gps_btn"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/gps" />

            </RelativeLayout>
            <TextView
                android:id="@+id/hide_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:text="Where you want to go ?"
                android:textColor="#50ABDE"
                android:textSize="20dp"
                />
            <EditText
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="20dp"
                android:background="#4F90CB"
                android:hint="To : destination"
                android:paddingLeft="20dp"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textColorHint="#A8FFFFFF"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#4F90CB"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="100"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#6AA7DF"
                        android:text="ALL"
                        android:textColor="#A8FFFFFF"
                        android:layout_weight="25"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#004F90CB"
                        android:text="LS"
                        android:textColor="#A8FFFFFF"
                        android:layout_weight="25"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#004F90CB"
                        android:text="FP"
                        android:textColor="#A8FFFFFF"
                        android:layout_weight="25"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#004F90CB"
                        android:text="EX"
                        android:textColor="#A8FFFFFF"
                        android:layout_weight="25"/>
                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/select_layout"
            android:background="#E6EBF3"
            android:orientation="vertical"
            android:minHeight="300dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:background="#BECBD6"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="25"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="ALAPPY -> CHERTHALA"
                            android:textAlignment="gravity"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="75"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="LS"
                            android:textAlignment="gravity"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="10dp"
                        android:background="#BECBD6"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="25"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="11th MILE  -> CHERTHALA"
                            android:textAlignment="gravity"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="75"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="LS"
                            android:textAlignment="gravity"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="10dp"
                        android:background="#BECBD6"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="25"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="KVM  -> CHERTHALA"
                            android:textAlignment="gravity"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="75"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="FP"
                            android:textAlignment="gravity"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="10dp"
                        android:background="#BECBD6"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="25"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="GOA -> CHERTHALA"
                            android:textAlignment="gravity"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="75"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="LS"
                            android:textAlignment="gravity"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="10dp"
                        android:background="#BECBD6"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="25"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="ALAPPY -> CHERTHALA"
                            android:textAlignment="gravity"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="75"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="LS"
                            android:textAlignment="gravity"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>